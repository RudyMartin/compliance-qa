{
  "workflow_id": "api_integration",
  "workflow_name": "Multi-API Integration Pipeline",
  "workflow_type": "api_integration",
  "description": "Orchestrate data flow across multiple APIs with error handling and rate limiting",
  "steps": {
    "1": {
      "step_id": "authentication_setup",
      "step_name": "Authentication Setup",
      "step_type": "process",
      "step_number": "1",
      "description": "Establish secure connections to external APIs",
      "requires": ["api_credentials"],
      "produces": ["auth_tokens", "connection_status"],
      "params": {
        "auth_methods": ["oauth2", "api_key", "jwt"],
        "token_refresh": true,
        "timeout": 30
      },
      "kind": "validate",
      "validation_rules": {
        "token_expiry_check": true,
        "connection_health": true
      }
    },
    "2": {
      "step_id": "data_retrieval",
      "step_name": "Data Retrieval",
      "step_type": "ingest",
      "step_number": "2",
      "description": "Fetch data from multiple API endpoints",
      "requires": ["auth_tokens"],
      "produces": ["api_responses", "retrieval_metadata"],
      "params": {
        "endpoints": ["user_data", "transaction_data", "analytics_data"],
        "rate_limit": "100_per_minute",
        "retry_logic": true,
        "parallel_requests": 3
      },
      "kind": "extract",
      "validation_rules": {
        "response_validation": true,
        "rate_limit_compliance": true
      }
    },
    "3": {
      "step_id": "data_aggregation",
      "step_name": "Data Aggregation",
      "step_type": "transform",
      "step_number": "3",
      "description": "Combine and normalize data from different APIs",
      "requires": ["api_responses"],
      "produces": ["aggregated_data", "mapping_report"],
      "params": {
        "merge_strategy": "left_join",
        "conflict_resolution": "latest_timestamp",
        "data_deduplication": true
      },
      "kind": "transform",
      "validation_rules": {
        "schema_consistency": true,
        "data_completeness": 0.95
      }
    },
    "4": {
      "step_id": "data_enrichment",
      "step_name": "Data Enrichment",
      "step_type": "process",
      "step_number": "4",
      "description": "Enhance data with additional API calls",
      "requires": ["aggregated_data"],
      "produces": ["enriched_data", "enrichment_log"],
      "params": {
        "enrichment_apis": ["geolocation", "demographics", "weather"],
        "batch_size": 50,
        "cache_results": true
      },
      "kind": "extract",
      "validation_rules": {
        "enrichment_coverage": 0.8,
        "api_quota_management": true
      }
    },
    "5": {
      "step_id": "error_handling",
      "step_name": "Error Handling and Recovery",
      "step_type": "validate",
      "step_number": "5",
      "description": "Handle API errors and implement recovery strategies",
      "requires": ["enriched_data", "enrichment_log"],
      "produces": ["clean_data", "error_report"],
      "params": {
        "error_strategies": ["retry", "fallback", "skip"],
        "max_retries": 3,
        "fallback_data_sources": true
      },
      "kind": "validate",
      "validation_rules": {
        "error_rate_threshold": 0.1,
        "recovery_success_rate": 0.9
      }
    },
    "6": {
      "step_id": "data_output",
      "step_name": "Data Output",
      "step_type": "output",
      "step_number": "6",
      "description": "Deliver processed data to target systems",
      "requires": ["clean_data"],
      "produces": ["delivered_data", "delivery_confirmation"],
      "params": {
        "output_destinations": ["database", "webhook", "file_system"],
        "delivery_confirmation": true,
        "backup_copy": true
      },
      "kind": "notify",
      "validation_rules": {
        "delivery_success": true,
        "data_integrity_check": true
      }
    }
  },
  "metadata": {
    "created_at": "2025-01-14T12:00:00Z",
    "workflow_complexity": "medium",
    "expected_execution_time": "10-20 minutes",
    "resource_requirements": {
      "memory": "4GB",
      "cpu": "2 cores",
      "network": "high bandwidth",
      "storage": "5GB temp space"
    }
  }
}