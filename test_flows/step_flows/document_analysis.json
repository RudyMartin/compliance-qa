{
  "workflow_id": "document_analysis",
  "workflow_name": "Document Analysis and Extraction",
  "workflow_type": "document_processing",
  "description": "Intelligent document processing with OCR, NLP, and entity extraction",
  "steps": {
    "1": {
      "step_id": "document_intake",
      "step_name": "Document Intake",
      "step_type": "ingest",
      "step_number": "1",
      "description": "Ingest and classify documents from various sources",
      "requires": ["document_batch"],
      "produces": ["classified_documents", "intake_log"],
      "params": {
        "supported_formats": ["pdf", "docx", "txt", "images"],
        "classification_model": "document_classifier_v2",
        "batch_processing": true
      },
      "kind": "classify",
      "validation_rules": {
        "max_file_size": "50MB",
        "virus_scan_required": true
      }
    },
    "2": {
      "step_id": "ocr_processing",
      "step_name": "OCR Processing",
      "step_type": "transform",
      "step_number": "2",
      "description": "Extract text from images and scanned documents",
      "requires": ["classified_documents"],
      "produces": ["extracted_text", "ocr_confidence"],
      "params": {
        "ocr_engine": "tesseract_enhanced",
        "languages": ["en", "es", "fr"],
        "confidence_threshold": 0.8
      },
      "kind": "extract",
      "validation_rules": {
        "min_confidence": 0.7,
        "text_length_validation": true
      }
    },
    "3": {
      "step_id": "text_preprocessing",
      "step_name": "Text Preprocessing",
      "step_type": "process",
      "step_number": "3",
      "description": "Clean and normalize extracted text",
      "requires": ["extracted_text"],
      "produces": ["cleaned_text", "preprocessing_metadata"],
      "params": {
        "cleaning_steps": ["remove_noise", "normalize_whitespace", "fix_encoding"],
        "language_detection": true,
        "spell_check": true
      },
      "kind": "transform",
      "validation_rules": {
        "min_text_quality": 0.8,
        "preserve_structure": true
      }
    },
    "4": {
      "step_id": "entity_extraction",
      "step_name": "Entity Extraction",
      "step_type": "analyze",
      "step_number": "4",
      "description": "Extract named entities and key information",
      "requires": ["cleaned_text"],
      "produces": ["extracted_entities", "entity_confidence"],
      "params": {
        "entity_types": ["PERSON", "ORG", "DATE", "MONEY", "GPE"],
        "extraction_model": "spacy_lg",
        "custom_patterns": true
      },
      "kind": "extract",
      "validation_rules": {
        "min_entity_confidence": 0.75,
        "entity_validation": true
      }
    },
    "5": {
      "step_id": "content_summarization",
      "step_name": "Content Summarization",
      "step_type": "analyze",
      "step_number": "5",
      "description": "Generate summaries and key insights",
      "requires": ["cleaned_text", "extracted_entities"],
      "produces": ["document_summary", "key_insights"],
      "params": {
        "summary_length": "medium",
        "extraction_method": "abstractive",
        "include_entities": true
      },
      "kind": "summarize",
      "validation_rules": {
        "summary_coherence": 0.8,
        "key_point_coverage": 0.9
      }
    },
    "6": {
      "step_id": "output_generation",
      "step_name": "Output Generation",
      "step_type": "output",
      "step_number": "6",
      "description": "Generate structured output and reports",
      "requires": ["document_summary", "extracted_entities", "key_insights"],
      "produces": ["structured_output", "analysis_report"],
      "params": {
        "output_formats": ["json", "xml", "pdf_report"],
        "include_visualizations": true,
        "confidence_scores": true
      },
      "kind": "report",
      "validation_rules": {
        "output_completeness": true,
        "format_validation": true
      }
    }
  },
  "metadata": {
    "created_at": "2025-01-14T12:00:00Z",
    "workflow_complexity": "medium-high",
    "expected_execution_time": "5-15 minutes per document",
    "resource_requirements": {
      "memory": "8GB",
      "cpu": "4 cores",
      "storage": "20GB temp space"
    }
  }
}