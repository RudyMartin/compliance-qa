  "step_definition": {
    "step_type": "unified",
    "phases": {
      "action": {
        "tidyllm_functions": [
          {
            "function": "analyze_performance_metrics",
            "inputs": ["execution_results", "execution_assessment"],
            "parameters": {
              "performance_dimensions": "{{performance_dimensions}}",
              "baseline_comparison": "{{baseline_comparison}}"
            },
            "output_variable": "performance_analysis"
          },
          {
            "function": "optimize_workflow_factors",
            "inputs": ["performance_analysis"],
            "parameters": {
              "rl_strategy": "{{rl_strategy}}",
              "optimization_targets": "{{optimization_targets}}",
              "learning_rate": "{{learning_rate}}"
            },
            "output_variable": "optimization_recommendations"
          }
        ]
      },
      "prompt": {
        "template_file": "step_05_rl_optimization_analysis.md",
        "inputs": ["performance_analysis", "optimization_recommendations"],
        "ai_model": "{{llm_model}}",
        "output_variable": "improvement_strategy"
      }
    }
  },
  "inputs": {
    "required": ["execution_results"],
    "optional": ["execution_assessment", "performance_baselines", "optimization_preferences"]
  },
  "outputs": {
    "performance_analysis": "Detailed performance metrics and improvement opportunities",
    "optimization_recommendations": "RL-driven optimization suggestions",
    "improvement_strategy": "AI-enhanced strategy for continuous improvement"
  },
  "configuration_form": "unified_rl_optimization_form.json",
  "estimated_time": "3-8 minutes",
